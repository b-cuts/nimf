<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
  <schema id="org.nimf.engines.sunpinyin"
          path="/org/nimf/engines/sunpinyin/" gettext-domain="nimf">
    <key type="s" name="hidden-schema-name">
      <default l10n="messages">'Chinese (sunpinyin)'</default>
      <summary>schema name for nimf-settings</summary>
      <description>This key is intended for nimf-settings.</description>
    </key>
    <key type="b" name="active">
      <default>true</default>
      <summary>Active engine</summary>
      <description>The engine will be loaded on startup if available. Restart required</description>
    </key>
    <key type="as" name="zh-en-keys">
      <default>['shift-mask space']</default>
      <summary>hotkey for switching Chinese / English</summary>
      <description>hotkey for switching Chinese / English</description>
    </key>
  </schema>
</schemalist>
